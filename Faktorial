# Rumus faktorial:
# n! = n x (n - 1):

def faktorial(n):
    if n == 0 or n == 1:
         return 1
    else:
         return n * faktorial(n - 1)

#membuat inputan dinamis dari keyboard
angka = int(input("masukkan bilangan: "))

#output untuk menampilkan hasil
print(f"faktorial dari {angka} adalah {faktorial(angka)}")
